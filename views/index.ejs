<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <title>Proddy Calendar App</title>
        <style>
          #btns {
            background-color: #FA7F6E;
            color: white
          }
        </style>
    </head>
    <body>
      <%- include("navBar/navBar.ejs")%>

      <div class="container">
        <br>
        <div class="text-center"><h2>Your Calendar</h2></div>
        <br>
        <table class="table table-hover small text-center">
          <tbody>
            <% for(let i=0; i < events.length; i++) { %>
              <hr>
              <tr>
                <td style="font-size: 15px; padding: 50px"><a href="/event/<%= events[i].eventId %>" style="color:#FA7F6E"><%= events[i].event_name %></a></td>
                <td style="font-size: 15px; padding: 50px"><%= events[i].event_date.getDate() %>/<%= events[i].event_date.getMonth() + 1%>/<%= events[i].event_date.getFullYear() %></td>
                <td style="font-size: 15px; padding: 50px"><%= events[i].event_time %></td>
                <td style="font-size: 15px; padding: 50px"><a type="button" id="btns" class="btn" href="/editEvent/<%= events[i].eventId%>">Edit</a></td>
                <td style="font-size: 15px; padding: 50px"><a type="button" id="btns" class="btn" href="/deleteEvent/<%= events[i].eventId%>" onclick="return confirm('Are you sure you want to delete this product?')">Delete</a></td>
              </tr>
            <% } %>
          </tbody>
        </table>
        <div class="d-flex" style="flex-wrap: wrap-reverse; flex-direction: row-reverse; margin-right: 5px;">
          <a type="button" id="btns" class="btn" href="/addEvent">Add an Event</a>
        </div>
      </div>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</html>