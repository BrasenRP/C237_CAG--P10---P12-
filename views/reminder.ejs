<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <title>Proddy Calendar App</title>
        <style>
            #btns {
            background-color: #FA7F6E;
            color: white
          }
        </style>
    </head>
    <body>
      <%- include("navBar/navBar.ejs")%>

      <div class="container">
        <br>
        <div class="text-center"><h2>Reminder</h2></div>
        <br>
        <% if (reminder) { %>
            <div>
                <p><b>Date:</b><br> <%= reminder.reminder_date %></p>
                <p><b>Time:</b><br> <%= reminder.reminder_time %></p> 
                <p><b>Message:</b><br> <%= reminder.msg %></p>
            </div>
        <% } else { %>
            <p>No reminder found.</p>
        <% } %>
        <a type="button" id="btns" class="btn" href ="/">Back</a>
    </div>

    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</html>