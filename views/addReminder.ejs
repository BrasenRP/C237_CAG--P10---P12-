<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <title>Proddy Calendar App</title>
        <style>
            #btns {
            background-color: #FA7F6E;
            color: white
          }
        </style>
    </head>
    <body>
      <%- include("navBar/navBar.ejs")%>
      <div class="container">
        <br>
        <div class="text-center"><h2>Add New Reminder</h2></div>
        <br>
        <div class="text-center">
            <form action="/addReminder" method="POST">
                <label for="date">Date:</label><br>
                <input type="date" id="date" name="reminder_date" required><br><br>

                <label for="time">Time:</label><br>
                <input type="time" id="time" name="reminder_time"required><br><br>

                <label for="msg">Message:</label><br>
                <textarea cols="40" rows="5" type="text" id="msg" name="msg" required></textarea><br><br>

                <button id="btns" class="btn" type="submit">Add Reminder</button>
            </form>
        </div>
    </div>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</html>